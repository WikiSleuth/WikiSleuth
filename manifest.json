{
  "name": "WikiSleuth",
  "description": "Wikisleuth",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "webNavigation"
  ],

  "optional_permissions": [
    "http://en.wikipedia.org/w/api.php"
  ],
  
  "background": {

    "scripts": ["background.js","apiClass.js", "diff.js", "txtwiki.js", "HTMLConstructor.js", "WikiRevFinder.js", "getSearchText.js", "createPanel.js", "createPanelForAuthor.js", "preProcess.js", "panel.js","processDataForAuthorUI.js", "processDataForUI.js","heatMapGenerator.js","makeWorkersTextDateList.js","AuthorFinder.js", "TimeCalculatorClass.js","master.js", "dateConverter.js"],

    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://en.wikipedia.org/*"],

      "js": ["dynamicColoring.js","apiClass.js", "diff.js", "txtwiki.js", "HTMLConstructor.js", "WikiRevFinder.js", "panel.js", "createPanelForAuthor.js","heatMapGenerator.js", "dateConverter.js", "getSearchText.js"],

      "all_frames": true,
      "run_at": "document_start"
    }
  ],

  "commands":{
    "WikiSleuth":{
      "suggested_key":{
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E",
        "windows": "Ctrl+Shift+E"
        },
        "description": "WikiSleuth",
        "global": true
      },

    "AuthorScore":{
      "suggested_key":{
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F",
        "windows": "Ctrl+Shift+F"
        },
        "description": "AuthorScore",
        "global": true
      },

    "_execute_browser_action": {
      "suggested_key":{
        "default": "Ctrl+Shift+I",
        "mac": "Ctrl+Shift+I",
        "windows": "Ctrl+Shift+I"
      }
    },
    "_execute_page_action":{
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Ctrl+Shift+U",
        "windows": "Ctrl+Shift+U"
      }
    }
    }, 

  "browser_action": {
    "default_title": "Wikisleuth",
    "default_icon": "icon.png",
    "default_popup": "popuphm.html"
  },
  "manifest_version": 2
}
